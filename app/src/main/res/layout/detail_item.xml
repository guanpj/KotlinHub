<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardContainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginTop="1dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/containerPadding">

        <ImageView
            android:id="@+id/iconView"
            android:visibility="gone"
            android:layout_width="@dimen/avatar_tiny"
            android:layout_height="@dimen/avatar_tiny"
            android:layout_gravity="center_vertical"
            app:srcCompat="@drawable/ic_github"/>

        <TextView
            android:id="@+id/titleView"
            style="@style/list_item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:text="Label"/>

        <TextView
            android:id="@+id/contentView"
            style="@style/list_item_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:text="Content"/>

    </LinearLayout>

    <android.support.v7.widget.TintableToggleButton
        android:id="@+id/operatorIconView"
        android:layout_width="@dimen/avatar_tiny"
        android:layout_height="@dimen/avatar_tiny"
        android:layout_gravity="center_vertical|end"
        android:layout_marginRight="10dp"
        android:textOn=""
        android:textOff=""
        app:backgroundTint="?android:textColorSecondaryInverse"
        android:background="@drawable/sel_star"/>

</android.support.v7.widget.CardView>

