<?xml version="1.0" encoding="utf-8"?>
<resources>

    <attr name="icon_color" format="color|reference"/>
    <attr name="bottom_icon_color" format="color|reference"/>
    <attr name="divider_color" format="color|reference"/>
    <attr name="card_background" format="color|reference"/>
    <attr name="timeLine_background" format="reference"/>
    <attr name="patch_deletion" format="color"/>
    <attr name="patch_addition" format="color"/>
    <attr name="patch_ref" format="color"/>
    <attr name="comment_box_style" format="reference"/>

    <attr name="item_title" format="string" />
    <attr name="item_content" format="string" />
    <attr name="item_icon" format="reference" />
    <attr name="item_op_icon" format="reference" />

    <attr name="targetTop" format="dimension"/>
    <attr name="targetLeft" format="dimension"/>
    <attr name="originalLeft" format="dimension"/>
    <attr name="originalTop" format="dimension"/>

    <declare-styleable name="DetailItemView">
        <attr name="item_title"/>
        <attr name="item_content"/>
        <attr name="item_icon"/>
        <attr name="item_op_icon"/>
    </declare-styleable>

    <declare-styleable name="AppBarLayoutBehavior">
        <attr name="targetTop"/>
        <attr name="targetLeft"/>
        <attr name="originalLeft"/>
        <attr name="originalTop"/>
    </declare-styleable>

    <declare-styleable name="common_uilib_auto_fix_layout">
        <attr name="common_uilib_line_item_count" format="integer" />
        <attr name="common_uilib_item_vertical_spacing" format="dimension" />
        <attr name="common_uilib_item_horizontal_spacing" format="dimension" />
        <attr name="common_uilib_item_divider_line" format="boolean" />
        <attr name="common_uilib_adapt_horizontal_margin" format="boolean" />
        <attr name="common_uilib_adapt_horizontal_padding" format="boolean" />
        <attr name="common_uilib_outer_divider_line" format="boolean" />
    </declare-styleable>

    <declare-styleable name="common_uilib_auto_gone_linearlayout">
        <attr name="common_uilib_dividers_with_line_for_6" format="boolean" />
        <attr name="common_uilib_adapt_left_right_margin" format="boolean" />
        <attr name="common_uilib_dividers_with_item_line" format="boolean" />
    </declare-styleable>
    <declare-styleable name="common_uilib_spacing">
        <attr name="common_uilib_vertical_spacing" format="dimension" />
        <attr name="common_uilib_horizontal_spacing" format="dimension" />
    </declare-styleable>

</resources>