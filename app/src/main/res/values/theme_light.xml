<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <color name="light_primary">#3F51B5</color>
    <color name="light_primary_dark">#303F9F</color>
    <color name="light_accent">#FF4081</color>
    <color name="light_window_background">#FAFAFA</color>
    <color name="light_icon_color">#FFFFFF</color>
    <color name="light_divider">#80949494</color>
    <color name="light_patch_addition_color">#CCFFCC</color>
    <color name="light_patch_deletion_color">#FFDDDD</color>
    <color name="light_patch_ref_color">#EEEEEE</color>

    <style name="ThemeLight" parent="ThemeLight.Base"/>

    <style name="ThemeLight.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/light_primary</item>
        <item name="colorPrimaryDark">@color/light_primary_dark</item>
        <item name="colorAccent">@color/light_accent</item>
        <item name="colorControlNormal">?android:colorAccent</item>
        <item name="actionModeBackground">?android:colorPrimary</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="card_background">@color/cardview_light_background</item>
        <item name="icon_color">@color/light_icon_color</item>
        <item name="bottom_icon_color">@color/bottom_nav_item_color_light</item>
        <item name="comment_box_style">@style/CommentBoxLight</item>
        <item name="timeLine_background">@style/TimeLineBackgroundLight</item>
        <item name="patch_addition">@color/light_patch_addition_color</item>
        <item name="patch_deletion">@color/light_patch_deletion_color</item>
        <item name="patch_ref">@color/light_patch_ref_color</item>
        <item name="divider_color">@color/light_divider</item>
        <item name="android:textColorPrimary">#212121</item>
        <item name="android:textColorSecondary">#727272</item>
        <item name="android:textColorTertiary">#686868</item>
        <item name="android:colorEdgeEffect">?android:colorPrimary</item>
        <item name="android:popupMenuStyle">@style/PopupMenuLight</item>
        <item name="android:spinnerDropDownItemStyle">@style/PopupMenuLight</item>
        <item name="android:dialogTheme">@style/DialogThemeLight</item>
        <item name="android:alertDialogTheme">@style/DialogThemeLight</item>
        <item name="android:toolbarStyle">@style/ToolbarStyleLight</item>
        <item name="android:windowBackground">@color/light_window_background</item>
        <item name="android:windowAllowEnterTransitionOverlap">true</item>
        <item name="android:windowAllowReturnTransitionOverlap">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:windowContentTransitions">true</item>
    </style>

    <style name="PopupMenuLight" parent="Widget.AppCompat.PopupMenu">
        <item name="android:popupBackground">@color/light_window_background</item>
    </style>

    <style name="PopupThemeLight" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:colorBackground">@color/light_window_background</item>
    </style>

    <style name="ToolbarStyleLight">
        <item name="android:textColorPrimary">@color/black</item>
        <item name="colorControlNormal">@color/black</item>
        <item name="colorControlHighlight">#42000000</item>
        <item name="popupTheme">@style/PopupThemeLight</item>
    </style>

    <style name="TimeLineBackgroundLight">
        <item name="android:background">@drawable/ic_timeline_arrow_left</item>
    </style>

    <style name="CommentBoxLight">
        <item name="android:background">@drawable/ic_edittext</item>
    </style>

    <style name="DialogThemeLight" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorPrimary">@color/light_primary</item>
        <item name="colorPrimaryDark">@color/light_primary_dark</item>
        <item name="colorAccent">@color/light_accent</item>
        <item name="android:toolbarStyle">@style/ToolbarStyleLight</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="card_background">@color/cardview_light_background</item>
        <item name="icon_color">@color/light_icon_color</item>
        <item name="comment_box_style">@style/CommentBoxLight</item>
        <item name="timeLine_background">@style/TimeLineBackgroundLight</item>
        <item name="android:windowBackground">@color/light_window_background</item>
        <item name="patch_addition">@color/light_patch_addition_color</item>
        <item name="patch_deletion">@color/light_patch_deletion_color</item>
        <item name="patch_ref">@color/light_patch_ref_color</item>
        <item name="divider_color">@color/light_divider</item>
    </style>

    <style name="TabTextAppearanceLight" parent="TextAppearance.AppCompat.Button">
        <item name="android:textSize">@dimen/design_tab_text_size</item>
        <item name="android:textColor">?android:textColorTertiary</item>
        <item name="textAllCaps">true</item>
    </style>

    <style name="TabLayoutLight" parent="Base.Widget.Design.TabLayout">
        <item name="tabMaxWidth">@dimen/design_tab_max_width</item>
        <item name="tabSelectedTextColor">?colorAccent</item>
        <item name="tabIndicatorColor">?colorAccent</item>
        <item name="tabBackground">?colorPrimary</item>
        <item name="tabTextAppearance">@style/TabTextAppearanceLight</item>
    </style>

</resources>