<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <color name="dark_primary">#2D3035</color>
    <color name="dark_primary_dark">#26282C</color>
    <color name="dark_accent">#2196F3</color>
    <color name="dark_window_background">#22252A</color>
    <color name="dark_icon_color">#eeeeee</color>
    <color name="dark_divider">#10FFFFFF</color>
    <color name="dark_patch_addition_color">@color/material_green_900</color>
    <color name="dark_patch_deletion_color">@color/material_red_900</color>
    <color name="dark_patch_ref_color">@color/material_blue_grey_500</color>

    <style name="ThemeDark" parent="ThemeDark.Base"/>

    <style name="ThemeDark.Base" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/dark_primary</item>
        <item name="colorPrimaryDark">@color/dark_primary_dark</item>
        <item name="colorAccent">@color/dark_accent</item>
        <item name="colorControlNormal">?android:colorAccent</item>
        <item name="actionModeBackground">?android:colorPrimary</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="card_background">@color/cardview_dark_background</item>
        <item name="icon_color">@color/dark_icon_color</item>
        <item name="bottom_icon_color">@color/bottom_nav_item_color_night</item>
        <item name="comment_box_style">@style/CommentBoxDark</item>
        <item name="timeLine_background">@style/TimeLineBackgroundDark</item>
        <item name="patch_addition">@color/dark_patch_addition_color</item>
        <item name="patch_deletion">@color/dark_patch_deletion_color</item>
        <item name="patch_ref">@color/dark_patch_ref_color</item>
        <item name="divider_color">@color/dark_divider</item>
        <item name="android:textColorPrimary">#EEEEEE</item>
        <item name="android:textColorSecondary">#9E9E9E</item>
        <item name="android:textColorTertiary">#ffe0e0e0</item>
        <item name="android:colorEdgeEffect">?android:colorPrimary</item>
        <item name="android:popupMenuStyle">@style/PopupMenuDark</item>
        <item name="android:spinnerDropDownItemStyle">@style/PopupMenuDark</item>
        <item name="android:dialogTheme">@style/DialogThemeDark</item>
        <item name="android:alertDialogTheme">@style/DialogThemeDark</item>
        <item name="android:toolbarStyle">@style/ToolbarStyleDark</item>
        <item name="android:windowBackground">@color/dark_window_background</item>
        <item name="android:windowAllowEnterTransitionOverlap">true</item>
        <item name="android:windowAllowReturnTransitionOverlap">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:windowContentTransitions">true</item>
    </style>

    <style name="PopupMenuDark" parent="Widget.AppCompat.PopupMenu">
        <item name="android:popupBackground">@color/dark_window_background</item>
    </style>

    <style name="PopupThemeDark" parent="ThemeOverlay.AppCompat">
        <item name="android:colorBackground">@color/dark_window_background</item>
    </style>

    <style name="ToolbarStyleDark">
        <item name="android:textColorPrimary">@color/white</item>
        <item name="colorControlNormal">@color/white</item>
        <item name="colorControlHighlight">#42ffffff</item>
        <item name="popupTheme">@style/PopupThemeDark</item>
    </style>

    <style name="TimeLineBackgroundDark">
        <item name="android:background">@drawable/ic_timeline_arrow_left</item>
        <item name="android:backgroundTint">#2D3035</item>
    </style>

    <style name="CommentBoxDark">
        <item name="android:background">@drawable/ic_edittext</item>
        <item name="android:backgroundTint">#2D3035</item>
    </style>

    <style name="DialogThemeDark" parent="Theme.AppCompat.Dialog.Alert">
        <item name="colorPrimary">@color/dark_primary</item>
        <item name="colorPrimaryDark">@color/dark_primary_dark</item>
        <item name="colorAccent">@color/dark_accent</item>
        <item name="android:toolbarStyle">@style/ToolbarStyleDark</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="card_background">@color/cardview_dark_background</item>
        <item name="icon_color">@color/dark_icon_color</item>
        <item name="comment_box_style">@style/CommentBoxDark</item>
        <item name="timeLine_background">@style/TimeLineBackgroundDark</item>
        <item name="android:windowBackground">@color/dark_window_background</item>
        <item name="patch_addition">@color/dark_patch_addition_color</item>
        <item name="patch_deletion">@color/dark_patch_deletion_color</item>
        <item name="patch_ref">@color/dark_patch_ref_color</item>
        <item name="divider_color">@color/dark_divider</item>
    </style>

</resources>